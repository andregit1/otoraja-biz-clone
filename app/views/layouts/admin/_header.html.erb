<!-- Navbar -->
<nav class="main-header navbar navbar-expand bg-white navbar-light border-bottom">
  <!-- Left navbar links -->
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" data-widget="pushmenu" href="#"><i class="fa fa-bars"></i></a>
    </li>
  </ul>

  <!-- Right navbar links -->
  <ul class="navbar-nav ml-auto">
    <li class="nav-item user-menu show">
      <a class="nav-link" data-toggle="dropdown" href="#" aria-expanded="false">
        <span class="d-md-inline dropdown-toggle"><%= current_user.name if user_signed_in? %></span>
      </a>
      <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right mr-2" onclick="event.stopPropagation()">
        <li class="user-header color-text-table-header">
          <div class="avatar-circle mx-auto">
            <span class="initials">
              <%= current_user.name[0].upcase %>
            </span>
          </div>
          <p class=" text-label mb-0">
            <%= current_user.name if user_signed_in? %>
          </p>
          <span class="text-small">
            <%= t 'admin.common.active_until' %> 
            <%= session[:expiration_date] %>
          </span>
        </li>
        <li class="p-3">
          <div class="row">
            <%= select_tag 'select_current_shop', options_from_collection_for_select(current_user.managed_shops_without_suspended, :id, :name, session[:default_user_shop]), class: 'border-0 mx-auto text-label select_current_shop' %>
          </div>
        </li>
        <li class="p-3 row">
          <div class="col-6">
            <%= button_to admin_subscriptions_path, method: :get, class: "btn button-secondary-active text-label" do %>
              <%= t 'admin.subscription.subscription' %>
            <% end %>
          </div>
           <div class="col-6">
            <%= button_to destroy_user_session_path, method: :delete, class: 'btn button-secondary-active float-right text-label' do %>
              <%= t 'admin.sidebar.logout' %>
            <% end %>
          </div>
        </li>
      </ul>
    </li>
    <li class="nav-item dropdown show">
      <a class="nav-link" data-toggle="dropdown" href="#" aria-expanded="false">
        <i class="fas fa-envelope"></i>
      </a>
      <div class="dropdown-menu dropdown-menu-right notif-dropdown mr-2">
        <!-- Message Start -->
        <% if @global_notification.present? %>
          <div class="media">
            <div class="media-body p-3">
              <p class="text-label font-weight-bold m-0">
                Release Update Note <%= formatedMonthSpace(@global_notification.published_from) %>
              </p>
              <p class="text-small"><%= formatedDateUseDash(@global_notification.published_from) %></p>
              <%= simple_format(truncate(@global_notification.body, length: 128), class: 'text-small') %>
            </div>
          </div>
          <% else %>
          <div class="media">
            <div class="media-body p-3">
              <p class="text-label font-weight-bold m-0 text-center">
                Belum ada pemberitahuan.
              </p>
            </div>
          </div>
        <% end %>
        <!-- Message End -->
        <div class="dropdown-divider"></div>
        <%= link_to admin_notifications_path, class: "dropdown-footer text-large" do %><%= t 'admin.notification.see_all_messages' %><% end %>
      </div>
    </li>
  </ul>
</nav>
<!-- /.navbar -->
