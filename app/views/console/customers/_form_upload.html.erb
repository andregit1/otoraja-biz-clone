<div class="card-body">

  <% if @customer_upload.errors.any? %>
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <h5><i class="fas fa-ban"></i> <%= pluralize(@customer_upload.errors.count, "error") %> prohibited this File from being uploaded:</h5>
      <ul>
      <% @customer_upload.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :shop_id %>
    <div>
      <%= f.collection_select :shop_id, current_user.managed_shops, :id, :name, {prompt: false}, class: 'form-control shop_select' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :file %>
    <div class="input-group">
      <div class="custom-file">
        <%= f.file_field :file, class: "custom-file-input", id: "productInputFile" %>
        <label class="custom-file-label" for="productInputFile">Choose file(.csv or .xlsx)</label>
      </div>
      <div class="input-group-append">
        <%= f.submit "import", class: "input-group-text" %>
      </div>
    </div>
  </div>
</div>