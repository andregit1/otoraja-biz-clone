
<div class="card card-widget">
  <div class="card-header" data-card-widget="collapse">
    <h3 class="card-title">
      <i class="fas fa-chevron-down"></i>
      <i class="fas fa-chevron-up"></i>
      Filter
    </h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <%= search_form_for @q, url:console_requests_new_application_path, class: 'd-flex align-items-end' do |f| %>
      <div class="form-group mr-3">
        <label>Status</label>
        <div>
          <%= f.collection_check_boxes(:status_in, NewContractRequest.statuses, :last, :first) do |b| %>
            <div class="form-check form-check-inline">
              <%= b.check_box(class: "form-check-input") %>
              <%= b.label class: "form-check-label" do %>
                <%= NewContractRequest.human_attribute_name("status.#{b.text}") %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit t('console.requests.button.search') , class: 'btn btn-primary'%>
      </div> 
    <% end %>
  </div>
  <!-- /.card-body -->
</div>
