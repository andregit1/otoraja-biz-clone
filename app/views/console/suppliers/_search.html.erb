<div class="card card-widget">
  <div class="card-header" data-card-widget="collapse">
    <h3 class="card-title">
      <i class="fas fa-chevron-down"></i>
      <i class="fas fa-chevron-up"></i>
      <%= t 'console.common.filter' %>
    </h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <%= search_form_for @q, url:console_suppliers_path, class: 'd-flex align-items-end search-form' do |f| %>
      <%= hidden_field_tag :sort %>
      <div class="form-group mr-3 w-50">
        <label><%= t 'console.common.keyword' %> <i class="fas fa-info-circle" data-html="true" data-toggle="tooltip" title="<%= t 'console.common.name' %><br><%= t 'console.common.address' %><br><%= t 'console.common.tel' %>"></i></label>
        <%= f.search_field :name_or_tel_or_address_cont , class: 'form-control', autocomplete: 'off' %>
      </div>
      <div class="form-group">
        <%= f.submit t('console.shop_product.search') , class: 'btn btn-primary'%>
      </div> 
    <% end %>
  </div>
  <!-- /.card-body -->
</div>
