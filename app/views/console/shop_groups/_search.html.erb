
<div class="card card-widget">
  <div class="card-header" data-card-widget="collapse">
    <h3 class="card-title">
      <i class="fas fa-chevron-down"></i>
      <i class="fas fa-chevron-up"></i>
      Filter
    </h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <%= search_form_for @q, url:console_shop_groups_path, class: 'form-row' do |f| %>
        <div class="form-group col-4">
          <label><%= t 'console.common.keyword' %> <i class="fas fa-info-circle" data-html="true" data-toggle="tooltip" title="Account ID or Name or Owner Name"></i></label>
          <%= f.search_field :name_or_group_no_or_owner_name_cont , class: 'form-control', autocomplete: 'off' %>
        </div>
        <div class="form-group col-2 align-self-end">
          <%= f.submit ("Cari") , class: 'form-control btn button-secondary-active'%>
        </div> 
      </div>
    <% end %>
  </div>
  <!-- /.card-body -->
</div>
