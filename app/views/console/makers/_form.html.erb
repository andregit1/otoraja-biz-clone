<div class="card-body">

  <% if maker.errors.any? %>
  <div class="callout callout-danger">
    <h2><%= pluralize(maker.errors.count, "error") %> prohibited this Pembuat from being saved:</h2>
    <ul>
      <% maker.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, t('console.common.name') %>
    <%= f.text_field :name, :class=>'form-control', autofocus: true, autocomplete: 'off' %>
  </div>

  <div class="form-group">
    <% if controller.action_name.in?(['new', 'create']) %>
      <%= f.hidden_field :order, value: '999' %>
    <% else %>
      <%= f.hidden_field :order %>
    <% end %>
  </div>

</div>

<div class="card-footer">
  <div class="row">
    <div class="col text-right">
      <%= link_to t('console.common.back'), console_makers_path, class: 'btn btn-default btn-lg' %>
      <% if controller.action_name.in?(['new', 'create']) %>
        <%= f.submit t('console.common.regist'), :class=>'btn btn-primary btn-lg' %>
      <% else %>
        <%= f.submit t('console.common.update'), :class=>'btn btn-primary btn-lg' %>
      <% end %>
    </div>
  </div>
</div>
