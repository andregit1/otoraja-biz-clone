<div class="card-body">

  <% if admin_product_upload.errors.any? %>
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <h5><i class="fas fa-ban"></i> <%= pluralize(admin_product_upload.errors.count, "error") %> prohibited this File from being uploaded:</h5>
      <ul>
      <% admin_product_upload.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="d-flex justify-content-between mb-4">
      <label>File template Bulk Input Admin Product</label>
      <%= link_to console_admin_products_template_export_path(format: :xlsx), class: "input-group-text btn btn-outline-secondary", data: { disable_with: 'Downloading...' } do %>
        <i class="fas fa-file-export mr-1"></i> Download
      <% end %>
    </div>
  </div>
  
  <div class="form-group">
    <label for="exampleInputFile">Product file input.</label>
    <div class="input-group">
      <div class="custom-file">
        <%= f.file_field :file, class: "custom-file-input", id: "productInputFile" %>
        <label class="custom-file-label" for="productInputFile">Choose file(.csv or .xlsx)</label>
      </div>
      <div class="input-group-append">
        <%= f.submit "import", class: "input-group-text" %>
      </div>
    </div>
  </div>
</div>