<div class="card card-widget">
  <div class="card-header" data-card-widget="collapse">
    <h3 class="card-title">
      <i class="fas fa-chevron-down"></i>
      <i class="fas fa-chevron-up"></i>
      <%= t 'console.common.filter' %>
    </h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <div class="d-flex align-items-end">
      <div class="form-group mr-3 w-25">
        <%= label_tag :select_category, t('console.common.category') %>
        <div>
          <%= select_tag 'select_category', options_from_collection_for_select(@product_categories, :id, :name),{ include_blank: true, class: 'form-control form-control-sm' } %>
        </div>
      </div>
      <div class="form-group mr-3">
        <label><%= t 'console.common.keyword' %> <i class="fas fa-info-circle" data-html="true" data-toggle="tooltip" title="<%= t 'console.common.name' %>"></i></label>
        <%= text_field_tag 'shop-product-search', '', class:'form-control', autocomplete: 'off' %>
      </div>
      <div class="form-group">
        <%= button_tag :type => "button", id: "shop-product-search-btn", class: "btn btn-primary" do %>
          <%= t 'console.shop_product.search' %>
        <% end %>
      </div>
    </div>
  </div>
  <!-- /.card-body -->
</div>
