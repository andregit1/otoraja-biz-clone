<% content_for(:title, t('console.shop_product.admin_product')) %>
<%= render 'search' %>

<div class="card">
  <div class="card-header">
    <div class="d-flex justify-content-between">
      <div>
        <a href="#" id="selectAll" class="btn btn-success btn-sm"><%= t 'console.admin_product.select_all' %></a>
        <a href="#" id="deselectAll" class="btn btn-warning btn-sm"><%= t 'console.admin_product.deselect_all' %></a>
      </div>
      <div>
        <%= link_to console_admin_products_import_path, class: "" do %>
          <i class="fas fa-file-import"></i>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card-body p-0">
    <table class="table table-hover">
      <div id="product_list"></div>
    </table>
  </div>
  <div class="card-footer">
    <div class="d-flex justify-content-between">
      <div>
        <%= link_to console_shop_products_path(shop_id: @default_shop&.id), class: 'btn btn-outline-primary footer-btn mr-2', style: 'width: auto;' do %>
          <%= t 'console.common.back' %>
        <% end %>
      </div>
      <div class="d-flex align-items-end">
        <% if @default_shop.present? || @shops.length == 1 %>
          <%= hidden_field_tag 'select_shop', @select_shop.id %>
          <%= label_tag :select_shop, t('console.admin_product.insert_to') %>
          <%= text_field_tag 'select_shop_name', @select_shop.name, {readonly: true, class: 'mx-3'} %>
        <% else %>
        <div class="mr-2">
          <%= label_tag :select_shop, t('console.admin_product.insert_to') %>
          <%= select_tag 'select_shop', options_from_collection_for_select(@shops, :id, :name, {:selected => @select_shop&.id&.to_i}), class: 'form-control' %>
        </div>
        <% end %>
        <div>
          <button class="btn footer-btn-update text-white mr-2" id="import"><%= t 'console.admin_product.import' %></button>
        </div>
      </div>
    </div>
  </div>
</div>

<input id="label-imported" type="hidden" value="<%= t 'console.admin_product.imported' %>">
<input id="label-category" type="hidden" value="<%= t 'console.common.category' %>">
<input id="label-name" type="hidden" value="<%= t 'console.common.name' %>">
<input id="label-product_no" type="hidden" value="<%= t 'console.shop_product.admin_product_no' %>">
<input id="label-item_detail" type="hidden" value="<%= t 'console.common.item_detail' %>">
<input id="label-brand" type="hidden" value="<%= t 'console.common.brand' %>">
<input id="label-variant" type="hidden" value="<%= t 'console.common.variant' %>">
<input id="label-tech_spec" type="hidden" value="<%= t 'console.common.tech_spec' %>">
<input id="label-remind_interval_day" type="hidden" value="<%= t 'console.common.remind_interval_day' %>">
<input id="label-created_at" type="hidden" value="<%= t 'console.admin_product.created_date' %>">
