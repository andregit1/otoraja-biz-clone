<div class="card card-widget">
  <div class="card-header" data-card-widget="collapse">
    <h3 class="card-title">
      <i class="fas fa-chevron-down"></i>
      <i class="fas fa-chevron-up"></i>
      <%= t 'console.common.filter' %>
    </h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <%= search_form_for @q, url:console_users_path do |f| %>
    <div class="d-flex align-items-end">
      <div class="form-group mr-3">
        <%= f.label :role, 'Role' %>
        <%= f.select :role_eq, @roles, {:include_blank => true}, {:class=>'form-control'} %>
      </div>
      <div class="form-group mr-3">
        <%= f.label :shop_id, 'Available Shops' %>
        <%= f.collection_select :shops_id_eq, current_user.managed_shops, :id, :name, {:include_blank => true}, {:class=>'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.submit 'Search', class: 'btn btn-primary' %>
      </div>
    </div>
    <% end %>
  </div>
  <!-- /.card-body -->
</div>
