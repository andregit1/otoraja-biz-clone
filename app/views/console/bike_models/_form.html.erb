<div class="card-body">

  <% if bike_model.errors.any? %>
  <div class="callout callout-danger">
    <h2><%= pluralize(bike_model.errors.count, "error") %> prohibited this Bike Model from being saved:</h2>
    <ul>
      <% bike_model.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, t('console.common.name') %>
    <%= f.text_field :name, :class=>'form-control', autofocus: true, autocomplete: 'off' %>
  </div>

  <div class="form-group">
    <%= f.label :maker, t('console.common.maker') %>
    <div>
      <%= f.select :maker_id, Maker.all.order(order: 'asc').pluck(:name, :id), :include_blank => true, :class => 'form-control select2' %>
    </div>
  </div>
</div>

<div class="card-footer">
  <div class="row">
    <div class="col text-right">
      <%= link_to t('console.common.back'), console_bike_models_path, class: 'btn btn-default btn-lg' %>
      <% if controller.action_name.in?(['new', 'create']) %>
        <%= f.submit t('console.common.regist'), :class=>'btn btn-primary btn-lg' %>
      <% else %>
        <%= f.submit t('console.common.update'), :class=>'btn btn-primary btn-lg' %>
      <% end %>
    </div>
  </div>
</div>
