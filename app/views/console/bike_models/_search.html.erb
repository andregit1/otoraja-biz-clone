<div class="card card-widget">
  <div class="card-header" data-card-widget="collapse">
    <h3 class="card-title">
      <i class="fas fa-chevron-down"></i>
      <i class="fas fa-chevron-up"></i>
      <%= t 'console.common.filter'  %>
    </h3>
  </div>
  <div class="card-body">
    <%= search_form_for @q, url:console_bike_models_path, class: 'd-flex align-items-end' do |f| %>
      <div class="form-group mr-3">
        <%= label_tag 'select_maker', t('console.common.maker') %>
        <div>
          <%= f.collection_select :maker_id_eq, @makers, :id, :name, {:include_blank => true}, {:class => 'form-control', :id => 'select_maker'} %>
        </div>
      </div>
      <div class="form-group mr-3">
        <label><%= t('console.common.keyword') %> <i class="fas fa-info-circle" data-html="true" data-toggle="tooltip" title="<%= t('console.common.name') %>"></i></label>
        <%= f.search_field :name_cont , class: 'form-control', autocomplete: 'off' %>
      </div>
      <div class="form-group">
        <%= f.submit t('console.shop_product.search'), class: 'btn btn-primary'%>
      </div>
    <% end %>
  </div>
</div>
