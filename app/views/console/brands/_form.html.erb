<div class="card-body">
  <% if brand.errors.any? %>
    <div class="callout callout-danger">
      <h4><%= t('console.brand.brand_error') %></h4>
      <ul>
        <% brand.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, t('console.brand.brand_name') %>
    <%= f.text_field :name, :class=>'form-control', autofocus: true, autocomplete: 'off' %>
  </div>
</div>
<div class="card-footer">
  <div class="row">
    <div class="col text-right">
      <%= link_to t('console.common.back'), console_brands_path, class: 'btn btn-default btn-lg' %>
      <% if controller.action_name.in?(['new', 'create']) %>
        <%= f.submit t('console.common.regist'), :class=>'btn btn-primary btn-lg' %>
      <% else %>
        <%= f.submit t('console.common.update'), :class=>'btn btn-primary btn-lg' %>
      <% end %>
    </div>
  </div>
</div>
