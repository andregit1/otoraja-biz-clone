<div class="card card-widget">
  <div class="card-header" data-card-widget="collapse">
    <h3 class="card-title">
      <i class="fas fa-chevron-down"></i>
      <i class="fas fa-chevron-up"></i>
      <%= t 'console.common.filter'  %>
    </h3>
  </div>
  <div class="card-body">
    <%= search_form_for @q, url:console_tech_specs_path, class: 'd-flex align-items-end' do |f| %>
      <div class="form-group mr-3">
        <label><%= t('console.common.search') %></label>
        <%= f.search_field :name_cont , class: 'form-control', autocomplete: 'off' %>
      </div>
      <div class="form-group">
        <%= f.submit t('console.common.search'), class: 'btn btn-primary'%>
      </div>
    <% end %>
  </div>
</div>
