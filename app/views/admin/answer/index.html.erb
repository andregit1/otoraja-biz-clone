<% content_for(:title, t('admin.answer.answers')) %>

<%= render 'search' %>

<div class="card">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover table-sticky">
        <thead>
          <tr>
            <th><%= t 'admin.answer.customer_name' %></th>
            <th><%= t 'admin.answer.rate' %></th>
            <th class="text-right"><%= t 'admin.answer.answer_date' %></th>
            <th></th>
          </tr>
        </thead>
        <tbody id="answer-tbody">
          <% @answers.each do |answer| %>
            <% customer = answer.questionnaire.checkin.customer %>
            <tr>
              <td>
                <%= customer&.name.blank? ? 'No name' : customer.name %><br/>
                <%= t('admin.answer.customer_id', customer_id: customer&.id) %>
              </td>
              <td><div class='star-<%= answer.rate %> answer-raty'></div></td>
              <td class="text-right"><%= formatedDateTz(answer.answered_at, 'Jakarta') %></td>
              <td class="text-center">
                <%= link_to admin_answer_path(answer),:class => "btn btn-primary" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @answers, window: 1 %>
</div>