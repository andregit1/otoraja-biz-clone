
<div class="content-header header-mtop">
    <div class="row">
        <div class="text-page-title font-weight-bold col-12">
            <h1 class="text-page-title font-weight-bold"><%= t 'admin.expenses_report.expenses_create_new_title' %></h1>
        </div>
    </div>
</div>
<div class="card card-widget">
    <div class="card-body p-3">
        <div class="row">
            <div class="col-md-12">
                <div class="expense-create-new-wrappe expense-new-padding-bottom">
                    <label class="text-small"><%= t 'admin.expenses_report.value' %></label>
                    <input name="shop_product_id" class="form-field ml-auto form-control" id="input-expenses-val" autocomplete="off">
                    <%= f.hidden_field :value %>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 expense-new-padding-bottom">
                <label class="text-small"><%= t 'admin.expenses_report.paid_to' %></label>
                <div class="row">
                    <div class="col-md-8 col-7">
                        <%= f.select 'supplier_id', policy_scope(Supplier).where(shop_id: session[:default_user_shop]).order(id: :desc).pluck(:name, :id), { selected: @supplier_shop ? @supplier_shop.id : (@shop_expense.supplier ? @shop_expense.supplier_id : "") }, {class: 'form-control form-control-sm use_select2 select2-expenses-custome'} %>
                    </div>
                    <div class="col-md-4 col-5 text-right">                  
                        <button id="expense-new-modal" name="button" type="button" class="btn button-secondary-active" data-target="#addNewExpenseModal">
                            <span class="text-large"><%= t 'admin.expenses_report.add_new' %></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-6 expense-new-padding-bottom">
                <label class="text-small"><%= t 'admin.expenses_report.date' %></label>
                <div class="input-calendar-icon">
                    <i class="far fa-calendar-alt"></i>
                    <%= f.text_field :expense_date, :class=>"form-control single-date-picker-no-minDate", :value => @shop_expense.expense_date ? formatedDateTz(@shop_expense.expense_date, 'Jakarta') : '', :required => true %>
                </div>
            </div>
            <div class="col-md-6 col-6 text-left">    
                <label class="text-small"><%= t 'admin.expenses_report.no_ref' %></label>              
                    <%= f.text_field :no_ref, class: 'form-field ml-auto form-control', autofocus: true, autocomplete: 'off' %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="expense-create-new-wrappe">
                    <label class="text-small"><%= t 'admin.expenses_report.desc' %></label>
                    <%= f.text_field :description, class: 'form-field ml-auto form-control', maxlength: 50, autofocus: true, autocomplete: 'off' %>
                    <span class="float-right count-desc-padding"><input id="countDesc" readonly="readonly" value='0' autocomplete="off"><%= t 'admin.expenses_report.info_desc' %></span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="expense-create-btn">
    <%= link_to admin_shop_expenses_path, :class => 'btn button-secondary-active text-large mr-2 btn-expenses-minwidth' do %>
        <%= t 'admin.expenses_report.cancel' %>
    <% end %>
    <%= f.submit t('admin.expenses_report.save'), :class=>'btn btn-primary text-large btn-expenses-minwidth', id: 'save-expenses-btn' %>
</div>

