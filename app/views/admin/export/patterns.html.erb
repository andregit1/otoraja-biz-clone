<% content_for(:title, 'Export Patterns') %>

<% @patterns.each do |pattern| %>
  <div class="card">
    <div class="card-header">
      <b><%= pattern.name %></b>
    </div>
    <div class="card-body">
      <div class="mb-3">
        <label>Layouts</label>
      </div>
      <% pattern.export_layouts.each do |layout| %>
        <div class="row">
          <div class="col-4"><%= layout.name %></div>
          <div class="col-4"><%= layout.export_type.name %></div>
          <div class="col-4">
            <%= link_to admin_export_layout_path(layout),:class => "btn btn-primary" do %>
              <i class="fas fa-eye"></i> Show
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
