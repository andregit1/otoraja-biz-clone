<% content_for(:title, 'CSV Export') %>
<div class="list-group">
  <%= link_to admin_export_answer_path(format: :csv), class: 'list-group-item list-group-item-action mb-2', data: { disable_with: 'Downloading...' } do %>
    <i class="fas fa-file-export"></i> Answer Data Export
  <% end %>

  <%= link_to admin_customers_export_path(format: :csv), class: "list-group-item list-group-item-action mb-2 #{'disabled' if current_user.export_pattern.nil?}", data: { disable_with: 'Downloading...' } do %>
    <i class="fas fa-file-export"></i> Customer Data Export <%= '(Export Pattern is not set)' if current_user.export_pattern.nil? %>
  <% end %>
</div>

