<div class="card card-widget">
  <div class="card-header" data-card-widget="collapse">
    <h3 class="card-title">
      <i class="fas fa-chevron-down"></i>
      <i class="fas fa-chevron-up"></i>
      Filter
    </h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <%= search_form_for @q, url: admin_product_categories_path, class: 'd-flex align-items-end' do |f| %>
      <div class="form-group mr-3">
        <label>Keyword <i class="fas fa-info-circle" data-html="true" data-toggle="tooltip" title="Name<br>Campaign Code"></i></label>
        <%= f.search_field :name_or_campaign_code_cont , class: 'form-control', autocomplete: 'off' %>
      </div>
      <div class="form-group">
        <%= f.submit ("Search") , class: 'btn btn-primary'%>
      </div> 
    <% end %>
  </div>
  <!-- /.card-body -->
</div>
