<div class="card card-widget">
  <div class="card-header color-text-table-header" data-card-widget="collapse">
    <h3 class="card-title">
      <i class="fas fa-chevron-down"></i>
      <i class="fas fa-chevron-up"></i>
      <%= t 'admin.common.filter' %>
    </h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <%= search_form_for @q,url:admin_shop_staffs_path do |f| %>
      <div class="form-row">
        <div class="form-group col-12 col-md-5">
          <div class="front-wrap">
            <%= label_tag 'is_front_staff_eq', t('admin.shop_staff.position'), class: 'text-label mr-front-label mb-set' %>
            <div class="d-flex">
              <div class="form-check text-normal pl-0">
                <%= f.check_box :is_front_staff_eq, {}, checked_value = true, unchecked_value = '' %>
                <%= f.label :is_front_staff_eq, t('admin.shop_staff.front_staff'), class: 'mb-set text-weight-normal control-label' %>
              </div>
              <div class="form-check text-normal ml-front-item checkbox-lg">
                <%= f.check_box :is_mechanic_eq, {}, checked_value = true, unchecked_value = ''%>
                <%= f.label :is_mechanic_eq, t('admin.common.mechanic'), class: 'mb-set text-weight-normal control-label' %>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group col-8 col-md-5">
          <label class="text-label"><%= t 'admin.common.keyword' %></label>
          <%= f.search_field :name_cont, class: 'form-control', autocomplete: 'off' %>
        </div>
        <div class="form-group col-2 col-md-2">
          <%= f.submit t('admin.shop_product.search'), class: 'btn button-secondary-active staff-search-btn text-large' %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- /.card-body -->
</div>
