<div class="card card-widget">
  <div class="card-header" data-card-widget="collapse">
    <h3 class="card-title">
      <i class="fas fa-chevron-down"></i>
      <i class="fas fa-chevron-up"></i>
      <%= t 'admin.common.filter' %>
    </h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <%= search_form_for @q, url: admin_bikes_path, class: 'd-flex align-items-end' do |f| %>
      <div class="form-group mr-3">
        <label><%= t 'admin.common.keyword' %> <i class="fas fa-info-circle" data-html="true" data-toggle="tooltip" title="<%= t 'admin.common.maker' %> / <%= t 'admin.common.model' %> / <%= t 'admin.bike.color' %><br><%= t 'admin.bike.number' %> / <%= t 'admin.bike.expiration' %>"></i></label>
        <%= f.search_field :maker_or_model_or_color_or_owned_bike_number_plate_area_or_owned_bike_number_plate_number_or_owned_bike_number_plate_pref_or_owned_bike_expiration_month_or_owned_bike_expiration_year_cont , class: 'form-control', autocomplete: 'off' %>
      </div>
      <div class="form-group">
        <%= f.submit t('admin.shop_product.search') , class: 'btn btn-primary'%>
      </div> 
    <% end %>
  </div>
  <!-- /.card-body -->
</div>
