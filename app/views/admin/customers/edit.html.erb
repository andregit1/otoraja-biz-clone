<% content_for(:title, t('admin.customer.edit')) %>

<%= form_with(model: @customer, url: admin_customer_update_path) do |f| %>
  <div class="card card-secondary">
    <div class="card-header">
      <span><%= t 'admin.common.config' %></span>
    </div>
    <div class="card-body p-0">
      <table class="table">
        <tbody>
          <tr>
            <th class="align-middle"><%= t 'admin.common.send_dm' %></th>
            <td><%= f.check_box :send_dm, data: {toggle: 'toggle'} %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <%= f.submit t('admin.customer.save'), :class=>'btn btn-primary' %>
<% end %>
