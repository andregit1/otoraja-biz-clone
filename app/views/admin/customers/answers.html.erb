<% content_for(:title, t('admin.customer.reviews')) %>
<%= render 'nav' %>
<% unless @answers.empty? %>
  <div class="card card-secondary">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="text-normal color-text-table-header">
            <tr>
              <th><%= t 'admin.common.shop' %></th>
              <th><%= t 'admin.common.rate' %></th>
              <th><%= t 'admin.common.comment' %></th>
              <th><%= t 'admin.customer.date' %></th>
              <th></th>
            </tr>
          </thead>
          <tbody class="text-label">
          <% @answers.each do |answer| %>
          <tr>
            <td><%= answer.questionnaire.checkin.shop.name %></td>
            <td><div class='star-<%= answer.rate %> answer-raty'></div></td>
            <td><%= answer.comment.gsub(/\n/, ' ').truncate(30) %></td>
            <td><%= formatedDateTime(answer.answered_at, 'Jakarta', false) %></td>
            <td>
            <%= link_to admin_answer_path(answer), :class => 'btn btn-primary' do %><i class="fas fa-eye"></i></a><% end %>
            </td>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
<div class='m-3'><%= t 'admin.common.no_review' %></div>
<% end %>
<div class="d-flex justify-content-center">
  <%= paginate @answers %>
</div>
