<div class="card card-widget">
  <div class="card-header" data-card-widget="collapse">
    <h3 class="card-title">
      <i class="fas fa-chevron-down"></i>
      <i class="fas fa-chevron-up"></i>
      Filter
    </h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <%= search_form_for @q, url: admin_packaging_product_relations_path do |f| %>
      <%= f.hidden_field :packaging_product_shop_id_eq, :value => session[:default_user_shop]  %> 
      <div class="form-row">
        <div class="form-group col-qw col-md-5">
          <%= label_tag :q_packaging_product_product_category_id_eq, t('admin.common.category') %>
          <div>
            <%= f.collection_select :packaging_product_product_category_id_eq, @product_categories, :id, :name, {include_blank: true, selected: @selected_category}, {class: 'form-control form-control-sm'} %>
          </div>
        </div>
        <div class="form-group col-6 col-md-3">
          <label><%= t 'admin.common.keyword' %> <i class="fas fa-info-circle" data-html="true" data-toggle="tooltip" title="Product Name<br>Item Detail"></i></label>
          <%= f.search_field :packaging_product_shop_alias_name_or_packaging_product_item_detail_cont , class: 'form-control', autocomplete: 'off' %>
        </div>
        <div class="form-group col-6 col-md-3 mt-4 pt-2">
          <%= f.submit ("Cari") , class: 'btn btn-primary'%>
        </div> 
      </div>
    <% end %>
  </div>
  <!-- /.card-body -->
</div>
