<div class="d-flex justify-content-between">
  <h1 class="text-page-title font-weight-bold"><%= t('admin.sidebar.packaging_product_relation') %></h1>
  <%= link_to new_admin_packaging_product_relation_path,:class => 'btn button-secondary-active text-normal mb-2' do %>
    <i class="fa fa-plus"></i>Baru
  <% end %>
</div>

<%= render 'search' %>

<div class="card">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover table-sticky">
        <thead>
          <tr>
            <th>Nama Paket</th>
            <th>Harga</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @packaging_products.each do |packaging_product| %>
          <tr class="<%= 'bg-secondary' unless packaging_product.packaging_product.is_use? %>">
            <td class="p-3">
              <span class="text-normal"><%= packaging_product.packaging_product.shop_alias_name %></span><br/>
              <span class="text-small"><%= packaging_product.packaging_product.product_category.name %></span><br/>
              <span class="text-label font-weight-bold"><%= "Detail: #{packaging_product.packaging_product.item_detail}" if packaging_product.packaging_product.item_detail.present? %></span>
            </td>
            <td><%= formatedRupiahAmount(packaging_product.packaging_product.sales_unit_price) %></td>
            <td class="text-center p-3">
              <%= link_to edit_admin_packaging_product_relation_path(packaging_product), :class => 'btn btn-primary' do %>
                <i class="fas fa-edit"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @packaging_products %>
</div>
