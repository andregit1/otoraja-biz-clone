<div class="card-body">

  <% if shop_product.errors.any? %>
  <div class="callout callout-danger">
    <h2><%= pluralize(shop_product.errors.count, "error") %> prohibited this User from being saved:</h2>
    <ul>
      <% shop_product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-12 col-md-6">
      <%= f.label :shop_id, t('admin.packaging_product.shop') %>
      <%= f.collection_select :shop_id, @shops, :id, :name, { :include_blank => false }, { :class=>'form-control mr-2' } %>
    </div>
    <div class="form-group col-12 col-md-6">
      <%= f.label :product_category_id, t('admin.packaging_product.product_category') %>
      <%= f.collection_select :product_category_id, @product_categories, :id, :name, { :include_blank => false }, { :class=>'form-control mr-2' } %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-12 col-md-6">
      <%= f.label :shop_alias_name, t('admin.packaging_product.product_name') %>
      <%= f.text_field :shop_alias_name, :class=>'form-control', autofocus: true, autocomplete: 'off' %>
    </div>
    <div class="form-group col-12 col-md-6">
      <%= f.label :item_detail, t('admin.packaging_product.item_detail') %>
      <%= f.text_field :item_detail, :class=>'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-12 col-md-6">
      <%= f.label :sales_unit_price, t('admin.packaging_product.sales_unit_price') %>
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">Rp</div>
        </div>
        <%= f.text_field :sales_unit_price, :class=>'form-control text-right', autocomplete: 'off' %>
      </div>
    </div>
    <div class="form-group col-12 col-md-6">
      <%= f.label :is_use, t('admin.packaging_product.is_use') %>
      <div class="toggle-primary">
        <%= f.check_box :is_use, data: {toggle: 'toggle', on: 'Iya', off: 'Tidak_'}, :class=>'color-primary' %>
      </div>
    </div>
  </div>

  <div class="packaging-product-relations-packaging-box mb-2">
    <%= f.label :packaging_product_relations_packaging, t('admin.packaging_product.inclusion_products') %>
    <%= f.fields_for :packaging_product_relations_packaging do |product| %>
      <%= render 'packaging_product_relations_packaging_fields', f: product %>
    <% end %>
  </div>

  <div class="mx-5">
    <%= link_to_add_association f, :packaging_product_relations_packaging, data: {'association-insertion-method' => 'before'}, class: 'btn-base -basic -primary' do %>
      <i class="fas fa-plus mr-1"></i> <span class="text-normal"><%= t('admin.packaging_product.add_product')%></span>
    <% end %>
  </div>
</div>

<div class="card-footer">
  <div class="row mx-5">
    <div class="col-6 pl-0">
      <%= link_to t('admin.packaging_product.back'), admin_packaging_product_relations_path, class: 'btn-base -thin -normal' %>
    </div>
    <div class="col-6 pr-0">
      <%= f.submit t('admin.packaging_product.regist'), :class=>'btn-base -thin -primary' %>
    </div>
  </div>
</div>
