<h1 class="text-page-title font-weight-bold">
  <%= @shop.in_list_payment_gateway? ? t('admin.subscription.confirm_invoice') : t('admin.subscription.subscription_packet') %>
</h1>

<%= form_with(model: @subscriptions, id: 'form-request-subs', url: @url, method: @method) do |form| %>
  <%= form.hidden_field :is_change_plan, value: @is_change_plan if @is_change_plan.present? %>
  <%= form.hidden_field :continue_payment, value: @continue_payment if @continue_payment.present? %>
  <%= form.hidden_field :plan, value: @plan_id %>
  <%= form.hidden_field :shop_id, value: @shop_id %>
  <%= form.hidden_field :fee, value: @fee %>
  <%= form.hidden_field :period, value: @period %>
  <div class="card">
    <div class="card-body p-3">
      <div class="row text-normal mb-4">
        <div class="col-5 col-md-3 pb-2"><%= t 'admin.subscription.subscription_date' %></div>
        <div class="col-7 col-md-9 font-weight-bold"><%= formatedDateUseDash(Date.today) %></div>
        <div class="col-5 col-md-3 pb-2"><%= t 'admin.subscription.package_name' %></div>
        <div class="col-7 col-md-9 font-weight-bold"><%= t 'admin.subscription.monthly_package', period: @period != "1" ? @period : "" %></div>
        <div class="col-5 col-md-3 pb-2"><%= t 'admin.subscription.fee' %></div>
        <div class="col-7 col-md-9 font-weight-bold">Rp <%= formatedRupiah(@fee.to_i) %></div>
        <div class="col-5 col-md-3 pb-2"><%= t 'admin.common.shop' %></div>
        <div class="col-7 col-md-9 font-weight-bold"><%= @shop.name %></div>
      </div>
      <div class="form-check form-check-inline align-items-start">
        <%= form.check_box :aggreement, {checked: true, required: true, class: "form-check-input mt-1 checkbox-md"} %> 
        <label class=" form-check-label text-normal">
          <%= t 'admin.subscription.agree_statement_first' %> 
          <a href="#" data-toggle="modal" data-target="#subscritionAgreement" ><u><%= t 'admin.common.terms_condition' %></u></a>
          <%= t 'admin.subscription.agree_statement_last' %> 
        </label>
      </div>
    </div>
  </div>

  <% if @shop.in_list_payment_gateway? %>
    <div class="alert alert-danger alert-dismissible fade hide" id="alert-payment-method">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= t 'admin.subscription.payment_method_inactive' %>
    </div>
    <div class="card">
      <div class="card-body p-0">
        <p class="text-normal font-weight-bold border-bottom py-3 pl-3 mb-0"><%= t 'admin.subscription.payment_method_option' %></p>
        <% @payment_methods.each do |method| %>
          <div class="form-check form-check-inline border-bottom p-3 w-100 justify-content-between align-items-center">
            <div>
              <%= image_tag  payment_logo_path(method.icon_path), width: '70', class: 'img-responsive' %>
              <label class="form-check-label ml-3" for="payment_method_<%= method.id %>"><%= method.title %></label>
            </div>
            <%= form.radio_button :payment_method, method.id, class: "form-check-input radiobutton-md payment_method", required: true, disabled: true, data: {id: method.id}%>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%= render "modal_agreement" %>
  <%= render "modal_processing_subs" %>
  <%= render "modal_request_subs" %>

  <%= link_to admin_subscriptions_path, class: "btn button-secondary-active text-large mb-5" do %>
    <%= t 'admin.common.back' %></a>
  <% end %>

  <button type="button" class="btn button-active text-large mb-5" id="btn-loading"  data-toggle="modal" data-target="#requestSubsModal" disabled>
    <i class="fas fa-spinner fa-spin"></i>
  </button>
  <% if @shop.in_list_payment_gateway? %>
    <button type="button" class="btn button-active text-large request_subs hide mb-5" id="btn-buy" disabled data-disable-with="Bayar"  data-toggle="modal" data-target="#requestSubsModal" >Bayar</button>
  <% else %>
    <button type="button" class="btn button-active text-large request_subs hide mb-5" data-disable-with="Berlangganan"  data-toggle="modal" data-target="#requestSubsModal" >Berlangganan</button>
  <% end %>
 
<% end %>


