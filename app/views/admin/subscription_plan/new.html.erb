<h1 class="text-page-title font-weight-bold"><%= t 'admin.subscription.subscription_plan_packet' %></h1>

<div class="card">
  <div class="card-body p-3 no-border-last">
    <% @subscriptions.each do | plan | %>
      <%= form_with(model: @subscription, url: admin_subscription_plan_show_path, local: true) do |form| %>
        <%= form.hidden_field :plan, :value=>plan.subscription_plan.id %>
        <%= form.hidden_field :shop_id, :value=>@shop_id %>
        <%= form.hidden_field :fee, :value=>plan.fee %>
        <%= form.hidden_field :period, :value=>plan.subscription_period.period %>
        <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
          <div>
            <p class="text-label mb-2 text-uppercase"><%= t 'admin.subscription.monthly_package', period: plan.subscription_period.period != 1 ? plan.subscription_period.period : "" %></p>
            <h1 class="text-highlight font-weight-bold">Rp <%= formatedRupiah(plan.monthly_fee) %> / <%= (t 'admin.common.month') %></h1>
            <% if plan.subscription_period.period != 1 %>
              <p class="text-label">Rp <%= formatedRupiah(plan.fee) %> ditagihkan di awal</p>
            <% else %>
              <p class="text-label"><%= t 'admin.subscription.demo_info' %></p>
            <% end %>
          </div>
          <div>
            <%= form.submit (t 'admin.subscription.select'), :class=>"btn button-active text-normal" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<%= link_to admin_subscriptions_path, class: "btn button-secondary-active text-normal mb-2" do %>
  <%= t 'admin.common.cancel' %>
<% end %>