<!-- Select Main Mechanic Modal -->
<div id="selectMainMechanicModal" class="modal js-modal">
  <div class="modal_bg js-modal-close" data-target="#selectMainMechanicModal"></div>
  <div class="modal_content -bottom-sheet">
    <div class="modal-down js-modal-close" data-target="#selectMainMechanicModal">
      <i class="icon icon-Arrow-down"></i>
    </div>
    <div class="modal-body">
      <p><%= t 'slip.select_staff' %></p>

      <% @mechanics.each do |mechanic| %>
      <span class="badge badge-pill" id="main_mechanic_<%= mechanic.id %>" data-shop-staff-id="<%= mechanic.id %>"><%= mechanic.name %></span>
      <% end %>

      <div class="pl-5 pr-5 mt-6">
        <%= button_tag :type => "button", id: "confirm-main-mechanic", class: "btn-base -basic -primary js-modal-close", data: {"target" => "#selectMainMechanicModal"}, disabled: true do %>
          <%= t 'ok' %>
        <% end %>
      </div>

    </div>
  </div>
</div>
<!-- Select Main Mechanic Modal -->
